{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": false,
    "noUnusedLocals": true,
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@modules/*": ["./src/modules/*"],
      "@models/*": ["./src/models/*"],
      "@utils/*": ["src/utils/*"],
      "@guards/*": ["./src/guards/*"],
      "@constants/*": ["./src/constants/*"],
      "@configs/*": ["src/configs/*"],
      "@enums/*": ["./src/enums/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@secrets/*": ["./src/secrets/*"],
      "@validators/*": ["./src/validators/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    // "noEmit": true, do not uncomment it !Ya suka vsiu noch iz-za etoy zalupi ne spal
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
